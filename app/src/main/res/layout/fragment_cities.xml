<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/list_layout_margin"
    android:orientation="vertical"
    tools:context=".features.cities.presentation.CitiesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cities_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fragment_cities_recycler_view_item" />

    <include
        android:id="@+id/errorPanel"
        layout="@layout/fragment_error" />

</LinearLayout>